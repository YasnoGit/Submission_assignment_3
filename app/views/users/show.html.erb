<%= render 'user', user: @user %>

<div>
  <%= flash[:notice] %>
</div>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <span><th>Title</th></span>
      <span><th>Opinion</th></span>
      <span><th colspan="3"></th></span>
    </tr>
  </thead>
  <tbody>
    <tr>
     <% @books.each do |book| %>
    </tr>
      <span><td><%= image_tag @user.get_profile_image(80,80) %></td></span>
      <span><td><%= link_to book.title,book_path(book.id) %></td></span>
      <span><td><%= book.body %></td></span>
    <% end %>
  </tbody>
</table>
