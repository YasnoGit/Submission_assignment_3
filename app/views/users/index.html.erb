<%= render 'user', user: @user %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <%= image_tag book.get_image %>
      <% end %>
      <td><%= image_tag book.user.get_profile_image(80,80) %></td>
      <td><%= title %>と遷移</td>
      <td><%= body %></td>
      <% end %>
    </tr>
  </tbody>
</table>